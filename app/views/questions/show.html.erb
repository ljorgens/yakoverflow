<h1><%= @question.title %></h1>
<p>
  <%= @question.body %>
</p>
<% if @question.user_id == current_user.id %>
  <p><%= link_to "Edit", edit_question_path(@question) %></p>
  <p><%= link_to "Delete", question_path(@question),
              :data => {:confirm => "Are you sure?",
                        :method => "delete"}%></p>
<% end %>

<%= render 'responses/form' %>
