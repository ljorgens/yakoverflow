<%= render 'layouts/navbar' %>

<h1>Hello <%= current_user.email %>!</h1>
<p>
  <%= link_to "Log out", log_out_path %>
</p>

<% if @questions.all.any? %>
  <ul>
    <% @questions.each do |question|%>
      <li><%= question.title %></li>
  </ul>
    <% end %>
<% else %>
<p>
  There are no questions yet!
</p>
<% end %>

<h2>Ask a new question:</h2>
<%= render 'form' %>
